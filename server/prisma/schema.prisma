// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SchoolBoy {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  birthday  DateTime
  email     String
  phone     String
  instagram String

  genderId Int
  gender   Gender @relation(fields: [genderId], references: [id])

  family Family[]

  infoId Int  @unique
  info   Info @relation(fields: [infoId], references: [id])
}

model Gender {
  id         Int         @id @default(autoincrement())
  name       String
  schoolBoys SchoolBoy[]
  parent     Parent[]
}

model Family {
  id          Int       @id @default(autoincrement())
  schoolBoyId Int
  schoolBoy   SchoolBoy @relation(fields: [schoolBoyId], references: [id])

  parentId Int
  parent   Parent @relation(fields: [parentId], references: [id])
}

model Parent {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  phone     String
  birthday  DateTime
  job       String
  jobPlace  String

  genderId Int
  gender   Gender @relation(fields: [genderId], references: [id])

  family Family[]
}

model Info {
  id        Int        @id @default(autoincrement())
  schoolBoy SchoolBoy?

  schoolId Int
  school   School @relation(fields: [schoolId], references: [id])

  classId Int
  classes ClassTable @relation(fields: [classId], references: [id])

  teacherId Int
  teacher   Teacher @relation(fields: [teacherId], references: [id])
}

model School {
  id   Int    @id @default(autoincrement())
  name String
  info Info[]
}

model ClassTable {
  id   Int    @id @default(autoincrement())
  name String
  info Info[]
}

model Teacher {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  phone     String

  info Info[]
}

model AdminUser {
  id           Int     @id @default(autoincrement())
  email        String
  password     String
  refreshToken String?
}
